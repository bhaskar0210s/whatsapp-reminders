# Required: Whapi access token
WHAPI_API_TOKEN=

# Optional: override Whapi API base URL
WHAPI_BASE_URL=https://gate.whapi.cloud

# Default WhatsApp group id used by reminders where target/targetEnv is not set
WHAPI_GROUP_ID=

# Single source of truth for reminder definitions
REMINDERS_FILE=reminder.json

# Optional: if GitHub Action runs a few minutes late, this tolerance still sends due reminders
REMINDER_DUE_TOLERANCE_MINUTES=2

# Optional values used by sample reminder.json entries
FAMILY_GROUP_ID=
